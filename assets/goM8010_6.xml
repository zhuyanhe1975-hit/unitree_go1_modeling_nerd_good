<mujoco model="unitree_go1_motor_joint">
  <compiler angle="radian" autolimits="true" inertiafromgeom="false"/>
  <option timestep="0.001" integrator="RK4" gravity="0 0 0"/>

  <default>
    <!-- Identified from coverage_capture_20260204_103129.csv -->
    <!-- Stribeck friction fitted (pos/neg). MJCF uses symmetric frictionloss + damping -->
    <!-- frictionloss ~= mean(|tau_c|), damping ~= mean(b), armature ~= J -->
    <joint damping="-0.001913" frictionloss="0.037064" armature="0.000111842"/>
    <geom type="capsule" size="0.02" rgba="0.7 0.7 0.7 1"/>
  </default>
    
    <worldbody>
        <light directional="true" diffuse=".8 .8 .8" specular=".2 .2 .2" pos="0 0 5" dir="0 0 -1"/>
        
        <!-- 基座 -->
        <body name="base" pos="0 0 0">
            <!-- Explicit inertial to avoid auto-geom inertia -->
            <inertial pos="0 0 0" mass="1.0" diaginertia="1e-4 1e-4 1e-4"/>
            <geom type="cylinder" size="0.04 0.02" rgba="0.2 0.2 0.2 1"/>
            
            <!-- 关节连接：应用 Unitree Go1 动力学参数 -->
            <body name="link1" pos="0 0 0.05">
                <!-- Explicit inertial to avoid auto-geom inertia -->
                <inertial pos="0 0 0" mass="0.01" diaginertia="1e-6 1e-6 1e-6"/>
                <joint name="go1_joint" axis="0 0 1"/>
                <geom type="box" size="0.05 0.02 0.01" pos="0 0 0"/>
            </body>
        </body>
    </worldbody>

</mujoco>
